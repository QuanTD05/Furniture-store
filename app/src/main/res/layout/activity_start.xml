<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Phần giữa: lời chào -->
    <!-- Phần giữa: lời chào -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mung den voi FM"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy thỏa mãn sự lựa chọn của mình"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>


    <!-- Phần cuối -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bắt đầu"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E90000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvTermsOfService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều khoản dịch vụ"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <CheckBox
        android:id="@+id/checkboxAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đồng ý các điều khoản sử dụng và chính sách quyền riêng tư"
        android:textColor="#0F0000"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
